<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="BaseTheme" parent="android:Theme.Light">
        <item name="android:background">@color/background</item>
    </style>

    <style name="GridLine">
        <item name="android:background">@color/grid</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="HorizontalGridLine" parent="GridLine">
        <item name="android:layout_height">1.33dp</item>
        <item name="android:layout_width">284dp</item>
    </style>

    <style name="VerticalGridLine" parent="GridLine">
        <item name="android:layout_height">38.66dp</item>
        <item name="android:layout_width">1.33dp</item>
    </style>

    <style name="NumpadNumberTheme" parent="BaseTheme">
        <item name="android:background">@color/number_view</item>
        <item name="android:textColor">@color/foreground</item>
        <item name="android:textSize">10pt</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NumpadTheme" parent="BaseTheme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textColor">@color/foreground</item>
        <item name="android:textSize">14pt</item>
    </style>

